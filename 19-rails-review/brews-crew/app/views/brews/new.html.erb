<h1>CREATE NEW BREW</h1>
<%= form_for @brew do |f| %>
    <%= f.label :blend_name %>
    <%= f.text_field :blend_name %><br>
    <%= f.label :origin %>
    <%= f.text_field :origin %><br>
    <%= f.label :notes %>
    <%= f.text_area :notes %><br>
    <%= f.label :strength %>
    <%= f.number_field :strength %><br>
    <%= f.submit %>
<% end %>